<Window x:Class="_0428_라이프계산기.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0428_라이프계산기"
        mc:Ignorable="d"
        Title="라이프 계산기" Height="400" Width="250" MinWidth="200" MinHeight="100"
        >
    <Canvas x:Name="canvas1" Background="Gray">
        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Width="{Binding ActualWidth, ElementName=canvas1, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10, 5, 10, 5">
                <Label x:Name="label_cur" Background="Beige" 
                Content="현재 라이프 : "
                />
            </Grid>
            <Grid Grid.Row="1" Margin="10, 5, 10, 5" HorizontalAlignment="Left">
                <Button Width="80" Height="25" Click="Button_Click">
                    <Button.Content>
                        데미지
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Canvas>
</Window>
