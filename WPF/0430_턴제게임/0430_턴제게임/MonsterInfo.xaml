<UserControl x:Class="_0430_턴제게임.MonsterInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_0430_턴제게임"
             mc:Ignorable="d" DataContext="{Binding}" x:Name="uc" d:DesignHeight="80" d:DesignWidth="400">
    <Grid>
        <Rectangle Stroke="Black" StrokeThickness="2" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-10"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF757474" Offset="0.589"/>
                    <GradientStop Color="#FFAFAFAF" Offset="0.894"/>
                    <GradientStop Color="#FF7D7D7D" Offset="0.175"/>
                    <GradientStop Color="#FF838383" Offset="1"/>
                    <GradientStop Color="#FF929090" Offset="0.325"/>
                    <GradientStop Color="#FF404040" Offset="0.76"/>
                    <GradientStop Color="#99B3B3B3" Offset="0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" Text="{Binding Path=kWValue, ElementName=uc}" VerticalAlignment="Top" Foreground="Black" FontSize="10"/>
                <Label x:Name="_name" Content="내 포켓몬" Margin="10, 0, 0, 0"/>
                <Label x:Name="_level" HorizontalAlignment="Right" Content="LV.10"/>
            </Grid>
            <Grid Grid.Row="1">
                <ProgressBar x:Name="_hp" Margin="10, 10, 10, 10" Minimum="0" Maximum="50" Value="25" RenderTransformOrigin="0.5,0.5">
                    <ProgressBar.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-11"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ProgressBar.RenderTransform>
                    <ProgressBar.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFD88989" Offset="1"/>
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>
                    <ProgressBar.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFC1C1C1"/>
                            <GradientStop Color="Black" Offset="1"/>
                        </LinearGradientBrush>
                    </ProgressBar.Background>
                </ProgressBar>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
